<%- include("partials/header"); -%>

<h1>Home</h1>
<p> <%= homeContent %> </p>

<% posts.forEach(function(post) { %>

    <% if (post.body.length > 100) {post.body = post.body.substr(0, 100) + " ...";} %>

    <h2> <%= post.title %> </h2>
    <p> <%= post.body %> 
        <a href="/posts/<%= post.title %>" > Read More </a>
    </p>

<%});%>

<%- include("partials/footer"); -%>
